#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../_html-to-text@3.3.0@html-to-text/bin/cli.js" "$@"
  ret=$?
else 
  node  "$basedir/../_html-to-text@3.3.0@html-to-text/bin/cli.js" "$@"
  ret=$?
fi
exit $ret
